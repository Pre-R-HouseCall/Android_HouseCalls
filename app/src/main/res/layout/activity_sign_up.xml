<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:minHeight="30dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="E-mail"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:password="true"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:inputType="phone"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:phoneNumber="true"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Street Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpAddr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="City"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4f95ce"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp" />

        <EditText
            android:id="@+id/signUpCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_edittext"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="3"
            android:rowCount="2">

            <TextView
                android:layout_width="59dp"
                android:layout_height="fill_parent"
                android:text="State"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4f95ce"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp" />

            <EditText
                android:id="@+id/signUpState"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:layout_marginTop="5dp"
                android:layout_column="0"
                android:layout_row="1"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:paddingTop="5dp"
                android:paddingRight="7dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:text="ZIP Code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4f95ce"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="1"
                android:singleLine="false" />

            <EditText
                android:id="@+id/signUpZipCode"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_marginTop="5dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:inputType="number" />
        </GridLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept the terms and conditions, HIPAA, and the security policies."
            android:id="@+id/signUpCheckBox"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Sign Up"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:minHeight="70dp" />

    </LinearLayout>

</ScrollView>

